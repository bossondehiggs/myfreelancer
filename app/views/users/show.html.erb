<section class="section">
    <div class="container">
        <div class="columns">
        
            <!-- LEFT SIDE -->
            <div class="column is-one-third">
                <div class="columns is-multiline">

                    <!-- Top Card -->
                    <div class="column is-full">
                        <div class="card">

                            <!-- Avatar -->
                            <div class="card-content is-horizontal-center is-flex">
                                <figure class="image is-128x128">
                                    <%= image_tag avatar_url(@user), class: "is-rounded" %>
                                </figure>
                            </div>
                            
                            <div class="card-content">

                                <!-- Upload Button -->
                                <div class="content has-text-centered">
                                    <p class="tittle is-5">
                                        <%= @user.full_name%></p>  
                                   </div>
                                <hr class="h-10">
                                
                                <!-- Member -->
                                <article class="media">
                                    <div class="media-content">Miembro desde</div>
                                    <div class="media-right">
                                    <strong><%= @user.created_at.strftime('%b %Y') %></strong>
                                </article>
                                <hr class="h-10">
                                
                                <!-- From -->
                                <article class="media">
                                            <div class="media-content">País</div>
                                            <div class="media-right">
                                            <strong><%= @user.from %></strong>
                                        </div>
                                    </article>                                
                                <hr class="h-10">

                                <!-- Online Status -->
                                 <article class="media">
                                <div class="media-content">Estado</div>
                                        <div class="media-right">
                                         <strong><% if @user.status %> Online <% else %> Desconectado <% end %></strong> 
                                                </div>
                                        </article>

                            </div>
                        </div>
                    </div>

                    <!-- Bottom Card -->
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">

                                <!-- About -->
                                            <article class="media">
                                                <div class="media-content">
                                                    <p>
                                                    <strong> Sobre mí</strong>
                                                    <br>
                                                    <%= @user.about %>

                                                    </p>
                                                                                                       
                                                    </div>
                                                        </article>
                                            <hr class="h-10">

                                <!-- Language -->
                                <article class="media">
                                                    <div class="media-content">
                                                    <p>
                                                    <strong> Idioma</strong>
                                                    <br>
                                                    <%= @user.language %>

                                                    </p>
                                                                                                       
                                                    </div>                                         
                                                 </article>
                                          <hr class="h-10">
                                
                                <!-- Linked Account -->
                                <article class="media">

                                <div class="content">
                                    <p>
                                       <strong>Conectar Cuenta</strong><br/>
                                       <% if @user.uid %>
                                            <span class="has-text-succes">Facebook verificado</span>
                                        <% else %>
                                             <span class="has-text-danger">Facebook  sin verificar</span>
                                        <% end %>
                                    </p>
                                </div>
                                
                                </article>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
               <div class="card">
                   <div class="card-header">
                       <div class="card-header-title">Últimas Valoraciones</div>
                   </div>
                   <div class="card content"></div>
                   <!--Sample Reviews-->
                   <article class="media">
                   <figure class="media-left">
                        <p class="image is-64x64">
                            <%= image_tag avatar_url(@user), class: "is-rounded" %>
                        </p>

                    </figure>
                    <div class="media-content">
                        <div class="content">
                        <p>
                            <strong>Jhon Smith</strong><br>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Unde laboriosam dolorum neque quisquam, animi, quibusdam temporibus, nesciunt nulla tenetur quod nostrum reiciendis? Commodi modi sit a facilis nisi nesciunt quis?
                        </p>
                        <small>31m</small>
                        </div>
                    </div>

                    <div class="medi-right">
                        <span class="star-review"><i class="fa fa-star"></i>5.0</span>
                    </div>

                   </article>
               </div> 
            </div>
            
        </div>
    </div>
</section>