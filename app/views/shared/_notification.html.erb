<% unless flash.empty? %>
<script>
    <% flash.each do |key, value| %>
    <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success')%>
    new Noty ({
        type: '<%= type %>',
        layout: 'bottomRight',
        timeout: '2000',
        theme: 'mint',
        text:  '<%= value %>'
        }).show();
  
       <% end %>
   </script> 
<% end %>