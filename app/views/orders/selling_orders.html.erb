<section class="section">
    <div class="container">
        <p class="title">Gestionar Ventas</p>

        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Comprador</th>
                    <th>Titulo</th>
                    <th>Fecha</th>
                    <th>Precio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <% if @orders.blank? %>
                  <tr>
                      <td colspan="6" class="has-text-centered"><h1>NADA PARA MOSTRAR TODAV√çA</h1></td>
                  </tr>
                <% end %>
                <% @orders.each do |o| %>
                    <tr>
                        <td><%= o.created_at.strftime('%d %b %Y') %></td>
                        <td><%= o.buyer_name %></td>
                        <td>
                        <%= link_to o.title, gig_path(o.gig) if !o.gig.nil? %>
                            <%= link_to o.title, request_path(o.request) if !o.request.nil? %>
                        </td>
                        <td><%= o.due_date.strftime('%d %b %Y') %></td>
                        <td><%= o.amount %></td>
                        <td>
                            <span class="tag <%= 'is-warning' if o.procesando? %> <%= 'is-success' if o.completado? %>">
                                <%= o.status.capitalize %>
                            </span>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</section>