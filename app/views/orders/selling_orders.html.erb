<section class="section">
    <div class="container">
        <p class="title">Gestión de Mis Ventas</p>

        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Nombre del comprador</th>
                    <th>Título</th>
                    <th>Fecha</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    
                </tr>
            </thead>
            <tbody>
            <% if @orders.blank? %>
            <tr>
                <td colspan="6" class="has-text-centered"><h1>NO HAY NADA PARA MOSTRAR</h1></td>
            </tr>
            <% end %>
                
                <% @orders.each do |o| %>
                <tr>
                    <td><%= o.created_at.strftime('%d %b %Y') %></td>
                    <td><%= o.buyer_name%></td>
                    <td><%= o.title%></td>
                    <td><%= o.due_date.strftime('%d %b %Y')%></td>
                    <td><%= o.amount%></td>
                    <td>
                        <span class="tag <%= 'is-warning' if o.procesando? %> <%= 'is-success' if o.completada? %> ">
                         <% o.status.capitalize %>
                         </span>
                    </td>
            

                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</section>